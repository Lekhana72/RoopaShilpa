<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Custom Orders</title>
  <link rel="stylesheet" href="/css/styles.css"><!-- Optional CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container my-5">
    <h1 class="mb-4">Submitted Custom Orders</h1>

    <% if (orders.length === 0) { %>
      <p>No orders submitted yet.</p>
    <% } else { %>
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Stone</th>
            <th>Height (cm)</th>
            <th>Place</th>
            <th>Duration (days)</th>
            <th>Submitted At</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach((order, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= order.title %></td>
              <td><%= order.description || "-" %></td>
              <td><%= order.stone || "-" %></td>
              <td><%= order.height || "-" %></td>
              <td><%= order.place || "-" %></td>
              <td><%= order.duration || "-" %></td>
              <td><%= order.createdAt.toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
