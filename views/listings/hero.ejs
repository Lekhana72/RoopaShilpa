 <section class="main-section">
    <div class="container">
      <div class="row g-4 align-items-start">
        <!-- Left Column -->
        <div class="col-lg-6 text-center">
          <img src="sculpture-main.jpg" alt="Sculpture" class="img-fluid rounded-3 shadow mb-3">
          <h3 class="heading mt-3">Commission a Masterpiece</h3>

          <div class="artist-card text-start">
            <div class="d-flex align-items-center mb-3">
              <img src="artist-photo.jpg" alt="Shilpashree T. Pankajaksha" class="rounded-circle me-3" width="70" height="70">
              <div>
                <strong>Crafted by Shilpashree T. Pankajaksha</strong><br>
                <small>An award-winning sculptor continuing the traditional Indian art legacy.</small>
              </div>
            </div>
            <p class="mb-1 small">Specializing in Chalukya, Chera & Hoysala styles. Author of <em>“Shilpa Saundarya”</em>.</p>
            <a href="#" class="text-decoration-none fw-semibold text-dark">Roopa Shilpa →</a>
          </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-6">
          <div class="card-custom">
            <h3 class="heading mb-4">Sculpt your Vision</h3>
            <form>
              <div class="mb-3">
                <label for="subject" class="form-label">Subject & Style (Custom)</label>
                <input type="text" id="subject" class="form-control" placeholder="Description">
              </div>

              <div class="mb-3">
                <label for="material" class="form-label">Material Selection</label>
                <input type="text" id="material" class="form-control" placeholder="Description">
              </div>

              <div class="mb-3">
                <label class="form-label">Material Options</label><br>
                <div class="form-check form-check-inline">
                  <input type="checkbox" class="form-check-input" id="granite">
                  <label class="form-check-label" for="granite">Granite Stone</label>
                </div>
                <div class="form-check form-check-inline">
                  <input type="checkbox" class="form-check-input" id="sandstone">
                  <label class="form-check-label" for="sandstone">Sandstone</label>
                </div>
                <div class="form-check form-check-inline">
                  <input type="checkbox" class="form-check-input" id="soapstone">
                  <label class="form-check-label" for="soapstone">Soapstone</label>
                </div>
              </div>

              <div class="mb-3">
                <label for="timeline" class="form-label">Timeline & Budget</label>
                <input type="date" id="timeline" class="form-control">
              </div>

              <button type="submit" class="btn btn-maroon w-100 py-2">
                Submit Commission Request
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>





