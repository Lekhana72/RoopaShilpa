<% layout('/layouts/boilerplate') %>

<div class="container mt-5">
  <h3>Customize: <%= listing.title %></h3>
  <form method="POST" action="/listings/<%= listing._id %>/customize" class="mt-4">
    <div class="mb-3">
      <label for="height" class="form-label">Height (cm)</label>
      <input type="number" name="height" id="height" class="form-control" min="1">
    </div>
    <div class="mb-3">
      <label for="material" class="form-label">Material</label>
      <select name="material" id="material" class="form-select">
        <option value="soapstone">Soapstone</option>
        <option value="granite">Granite</option>
        <option value="wood">Wood</option>
        <option value="bronze">Bronze</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input type="text" name="location" id="location" class="form-control" placeholder="City, Country">
    </div>
    <div class="mb-3">
      <label for="timeline" class="form-label">Timeline</label>
      <input type="text" name="timeline" id="timeline" class="form-control">
    </div>
    <button class="btn btn-primary">Save Customized Order</button>
  </form>
</div>